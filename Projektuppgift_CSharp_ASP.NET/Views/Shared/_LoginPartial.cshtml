@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item borderclass">
        <!--<a class="navtextaccount" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a> -->
        <form asp-area="Identity" asp-page="/Account/Manage/Index">
            <button class="navtextbuttons" title="Manage">@User.Identity.Name!</button>
        </form>
        
    </li>
    <li class="nav-item borderclass">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logoutbutton" class="navtext btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item borderclass">
        <a class="navtext" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item borderclass">
        <a class="navtext" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
